    "version": "0.2.0",
    "configurations": [
        {
            "name": "JavaScript: React",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
				"--no-debugger",
                "--no-reload"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Flask and React",
            "configurations": ["Python: Flask", "JavaScript: React"]
        }
    ]
}